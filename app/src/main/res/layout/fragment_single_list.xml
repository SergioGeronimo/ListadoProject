<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryTextColor"
    tools:context=".SingleListFragment"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/primaryColor"
            android:textSize="32sp"
            android:layout_marginTop="64dp"
            android:layout_marginHorizontal="48dp"
            android:text="Titulo de lista" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="48dp"
            android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_globe_outline"
            android:text="prueba"
            android:gravity="fill_vertical"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"
            android:drawablePadding="16dp"
            android:drawableTint="@color/primaryColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_person_outline"
            android:text="#"
            android:gravity="fill_vertical"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"
            android:drawablePadding="16dp"
            android:drawableTint="@color/primaryColor"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="48dp"
            android:drawableStart="@drawable/ic_information_circle_outline"
            android:drawableTint="@color/primaryColor"
            android:textColor="@color/secondaryTextColor"
            android:text="Aqui se muestra informacion de la reunion, puede ser un texto corto o uno largo"
            android:drawablePadding="16dp"
            android:background="@drawable/round_style_white"
            android:padding="12dp"
            android:elevation="4dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_link_outline"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="48dp"
            android:text="link"
            android:gravity="fill_vertical"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"
            android:drawablePadding="16dp"
            android:background="@drawable/round_style_white"
            android:elevation="4dp"
            android:drawableTint="@color/primaryColor"/>


    </LinearLayout>

</ScrollView>